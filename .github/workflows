name: Fetch retail feeds

on:
  workflow_dispatch: {}
  schedule:
    - cron: "15 * * * *" # hourly at :15
  push:
    branches: [ "main" ]

permissions:
  contents: write

jobs:
  fetch:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: "20"
          cache: "npm"
      - run: npm ci
      - run: npm run fetch
      - name: Commit & push if changed
        run: |
          if [[ -n "$(git status --porcelain)" ]]; then
            git config user.name "${{ github.actor }}"
            git config user.email "${{ github.actor }}@users.noreply.github.com"
            git add -A
            git commit -m "chore(data): refresh feeds [skip ci]"
            git push
          else
            echo "No changes"
          fi
